.container{
    padding-bottom: 100rpx;
}

.swiper{
    width: 750rpx;
    height: 750rpx;
}

.swiper image{
    width: 750rpx;
    height: 750rpx;
}


.info-wrapper{
    padding: 20px;
}

.price{
    font-size: 22px;
    color:red;
}

.goods_info{
    margin-top:20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.goods_title{
    flex:1;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.goods_star{
    width: 120rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-left: 20rpx;
    color: #999;
    border-left: 1px #999 solid;
}

.goods_star text{
    font-size: 13px;
}

.goods_other{
    margin-top: 20rpx;
    font-size: 14px;
    color: #999;
}

